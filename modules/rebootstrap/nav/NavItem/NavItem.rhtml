<c:template
    xmlns:c="core"
    xmlns:w="widgets"
    name="rebootstrap/nav/NavItem"
    params="navItem,isDropdownMenu,nav">
    
    <li w:widget="rebootstrap/nav/NavItemWidget" c:attrs="navItem.attrs">
        <a c:attrs="navItem.anchorAttrs">
            <c:choose>
                <c:when test="navItem.label">
                    ${navItem.label}
                </c:when>
                <c:when test="navItem.invokeBody">
                    <c:invoke function="navItem.invokeBody(nav)"/>
                </c:when>
            </c:choose>
            
            <b class="caret" c:if="isDropdownMenu"></b>
        </a>
        <ul class="dropdown-menu" c:if="isDropdownMenu">
            <c:invoke function="navItem.invokeBody(nav)"/>
        </ul>
        
    </li>

</c:template>